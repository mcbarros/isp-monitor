<% content_for :title, "First access" %>
<div class="mt-3 mb-3 is-flex">
  <h1>First access</h1>
</div>
<%= form_with(model: @user, url: first_access_path) do |form| %>
  <% if @user.errors.any? %>
    <div class="mt-2 mb-2 notification is-danger">
      <h5><%= pluralize(@user.errors.count, "error") %> prevented this user from being saved:</h5>
      <ul>
        <% @user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="fixed-grid">
    <div class="grid">
      <div class="field cell is-col-span-2">
        <%= form.label :email, class: "label" %>
        <div class="control">
          <%= form.text_field :email, class: "input" %>
        </div>
      </div>
      <div class="field cell">
        <%= form.label :password, class: "label" %>
        <div class="control">
          <%= form.text_field :password, class: "input" %>
        </div>
      </div>
      <div class="field cell">
        <%= form.label :password_confirmation, class: "label" %>
        <div class="control">
          <%= form.text_field :password_confirmation, class: "input" %>
        </div>
      </div>
      <div class="mt-3 mb-3 field is-grouped cell is-col-span-2">
        <div class="control">
          <%= form.submit class: "button is-link" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
